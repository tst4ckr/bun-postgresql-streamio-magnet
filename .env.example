# ===================================
# CONFIGURACIÓN DEL ADDON DE MAGNETS
# ===================================

# Configuración del servidor
PORT=7000
NODE_ENV=development
HOST=0.0.0.0

# Configuración del addon
ADDON_ID=com.stremio.magnet.search
ADDON_VERSION=1.0.0
ADDON_NAME=Magnet Search
ADDON_DESCRIPTION=Addon para buscar enlaces magnéticos de películas y series

# ===================================
# CONFIGURACIÓN DE FUENTE DE DATOS
# ===================================
# Fuente de datos CSV - puede ser URL remota o archivo local
CSV_SOURCE=./data/magnets.csv
# Ejemplos:
# CSV_SOURCE=https://example.com/magnets.csv
# CSV_SOURCE=./data/magnets.csv

# Timeout para URLs remotas (milisegundos)
CSV_TIMEOUT=30000

# Configuración de cache (segundos)
CACHE_STREAM_MAX_AGE=3600
CACHE_STREAM_STALE_REVALIDATE=3600
CACHE_STREAM_STALE_ERROR=86400

# Configuración de logging
# Niveles: debug, info, warn, error
LOG_LEVEL=info

# Configuración de seguridad
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de validación
STREAM_VALIDATION_TIMEOUT=10000
MAX_VALIDATION_CONCURRENCY=5
