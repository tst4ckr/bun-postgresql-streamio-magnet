# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================

# Puerto del servidor (default: 3000)
PORT=3000

# Host del servidor (default: localhost, usar 0.0.0.0 para producción)
HOST=localhost

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# Timeout del servidor en milisegundos (default: 30000)
SERVER_TIMEOUT=30000

# =============================================================================
# CONFIGURACIÓN DE CACHE
# =============================================================================

# Habilitar sistema de cache (default: true)
CACHE_ENABLED=true

# Memoria máxima para cache en MB (default: 128, máximo recomendado: 256 para 512MB RAM)
CACHE_MAX_MEMORY_MB=128

# TTL por defecto en segundos (default: 3600 = 1 hora)
CACHE_DEFAULT_TTL=3600

# Intervalo de limpieza automática en segundos (default: 300 = 5 minutos)
CACHE_CLEANUP_INTERVAL=300

# Número máximo de entradas en cache (default: 10000)
CACHE_MAX_ENTRIES=10000

# =============================================================================
# CONFIGURACIÓN DE BÚSQUEDA
# =============================================================================

# Número máximo de resultados por búsqueda (default: 50)
SEARCH_MAX_RESULTS=50

# Timeout de búsqueda en milisegundos (default: 30000)
SEARCH_TIMEOUT=30000

# Idioma por defecto para búsquedas (default: es)
SEARCH_DEFAULT_LANGUAGE=es

# Número máximo de peticiones paralelas (default: 3)
SEARCH_PARALLEL_REQUESTS=3

# =============================================================================
# PROVEEDOR: MEJORTORRENT
# =============================================================================

# Habilitar proveedor MejorTorrent (default: true)
MEJORTORRENT_ENABLED=true

# Prioridad del proveedor (1 = mayor prioridad, default: 1)
MEJORTORRENT_PRIORITY=1

# Límite de peticiones por minuto (default: 10)
MEJORTORRENT_RATE_LIMIT=10

# =============================================================================
# PROVEEDOR: WOLFMAX4K
# =============================================================================

# Habilitar proveedor Wolfmax4k (default: true)
WOLFMAX4K_ENABLED=true

# Prioridad del proveedor (default: 2)
WOLFMAX4K_PRIORITY=2

# Límite de peticiones por minuto (default: 5)
WOLFMAX4K_RATE_LIMIT=5

# =============================================================================
# PROVEEDOR: CINECALIDAD
# =============================================================================

# Habilitar proveedor Cinecalidad (default: true)
CINECALIDAD_ENABLED=true

# Prioridad del proveedor (default: 3)
CINECALIDAD_PRIORITY=3

# Límite de peticiones por minuto (default: 8)
CINECALIDAD_RATE_LIMIT=8

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Habilitar CORS (default: true)
SECURITY_ENABLE_CORS=true

# Orígenes permitidos para CORS (* para todos, default: *)
SECURITY_CORS_ORIGINS=*

# Habilitar rate limiting (default: true)
SECURITY_ENABLE_RATE_LIMIT=true

# Ventana de tiempo para rate limiting en milisegundos (default: 900000 = 15 minutos)
SECURITY_RATE_LIMIT_WINDOW=900000

# Número máximo de peticiones por ventana (default: 100)
SECURITY_RATE_LIMIT_MAX=100

# =============================================================================
# CONFIGURACIÓN DE STREMIO
# =============================================================================

# ID único del addon (default: org.stremio.torrent-search)
STREMIO_ADDON_ID=org.stremio.torrent-search

# Nombre del addon (default: Torrent Search)
STREMIO_ADDON_NAME=Torrent Search

# Descripción del addon
STREMIO_ADDON_DESCRIPTION=Busca torrents en múltiples proveedores españoles
