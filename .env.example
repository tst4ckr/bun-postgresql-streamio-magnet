# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================

# Puerto del servidor (default: 7000)
PORT=7000

# Host del servidor (default: 0.0.0.0 para producción)
HOST=0.0.0.0

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# =============================================================================
# CONFIGURACIÓN DE CACHE
# =============================================================================

# Habilitar sistema de cache (default: true)
CACHE_ENABLED=true

# Memoria máxima para cache en MB (default: 128, máximo recomendado: 256 para 512MB RAM)
CACHE_MAX_MEMORY_MB=128

# TTL por defecto en segundos (default: 3600 = 1 hora)
CACHE_DEFAULT_TTL=3600

# Intervalo de limpieza automática en segundos (default: 300 = 5 minutos)
CACHE_CLEANUP_INTERVAL=300

# Número máximo de entradas en cache (default: 10000)
CACHE_MAX_ENTRIES=10000

# =============================================================================
# CONFIGURACIÓN DE BÚSQUEDA
# =============================================================================

# Número máximo de resultados por búsqueda (default: 50)
SEARCH_MAX_RESULTS=50

# Timeout de búsqueda en milisegundos (default: 30000)
SEARCH_TIMEOUT=30000

# Idioma por defecto para búsquedas (default: es)
SEARCH_DEFAULT_LANGUAGE=es

# Número máximo de peticiones paralelas (default: 3)
SEARCH_PARALLEL_REQUESTS=3

# =============================================================================
# PROVEEDORES
# =============================================================================

# Todos los proveedores han sido eliminados

# =============================================================================
# CONFIGURACIÓN DE TORRENTIO API
# =============================================================================

# URL base de la API de Torrentio (default: https://torrentio.strem.fun/)
TORRENTIO_API_URL=https://torrentio.strem.fun/

# Configuración para películas
TORRENTIO_MOVIE_PROVIDERS=mejortorrent,wolfmax4k,cinecalidad
TORRENTIO_MOVIE_SORT=seeders
TORRENTIO_MOVIE_QUALITY_FILTER=scr,cam,unknown
TORRENTIO_MOVIE_LIMIT=1
TORRENTIO_MOVIE_LANGUAGE=spanish

# Configuración para series
TORRENTIO_SERIES_PROVIDERS=horriblesubs,nyaasi,tokyotosho,anidex,mejortorrent,wolfmax4k,cinecalidad
TORRENTIO_SERIES_SORT=seeders
TORRENTIO_SERIES_QUALITY_FILTER=scr,cam,unknown
TORRENTIO_SERIES_LIMIT=1
TORRENTIO_SERIES_LANGUAGE=spanish

# Configuración para anime
TORRENTIO_ANIME_PROVIDERS=horriblesubs,nyaasi,tokyotosho,anidex,mejortorrent,wolfmax4k,cinecalidad
TORRENTIO_ANIME_SORT=seeders
TORRENTIO_ANIME_QUALITY_FILTER=unknown
TORRENTIO_ANIME_LIMIT=1
TORRENTIO_ANIME_LANGUAGE=spanish

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Habilitar CORS (default: true)
SECURITY_ENABLE_CORS=true

# Orígenes permitidos para CORS (* para todos, default: *)
SECURITY_CORS_ORIGINS=*

# Habilitar rate limiting (default: true)
SECURITY_ENABLE_RATE_LIMIT=true

# Ventana de tiempo para rate limiting en milisegundos (default: 900000 = 15 minutos)
SECURITY_RATE_LIMIT_WINDOW=900000

# Número máximo de peticiones por ventana (default: 100)
SECURITY_RATE_LIMIT_MAX=100

# =============================================================================
# CONFIGURACIÓN DE STREMIO
# =============================================================================

# ID único del addon (default: org.stremio.torrent.search)
ADDON_ID=org.stremio.torrent.search

# Nombre del addon (default: Torrent Search Pro)
ADDON_NAME=Torrent Search Pro

# Versión del addon (default: 1.2.0)
ADDON_VERSION=1.2.0

# Descripción del addon
ADDON_DESCRIPTION=Advanced torrent search addon with multiple providers for movies and series

# Logo del addon
ADDON_LOGO=https://via.placeholder.com/256x256/1a1a1a/ffffff?text=TS

# Background del addon
ADDON_BACKGROUND=https://via.placeholder.com/1920x1080/1a1a1a/ffffff?text=Torrent+Search

# =============================================================================
# CONFIGURACIÓN DE CACHE STREMIO
# =============================================================================

# Cache para streams en segundos (default: 3600)
CACHE_STREAM_MAX_AGE=3600

# Revalidación de cache en segundos (default: 3600)
CACHE_STREAM_STALE_REVALIDATE=3600

# Error de cache en segundos (default: 86400)
CACHE_STREAM_STALE_ERROR=86400

# =============================================================================
# CONFIGURACIÓN DE REPOSITORIO CSV
# =============================================================================

# Fuente de datos CSV (default: ./data/magnets.csv)
CSV_SOURCE=./data/magnets.csv

# Timeout para CSV en milisegundos (default: 30000)
CSV_TIMEOUT=30000

# =============================================================================
# CONFIGURACIÓN DE TOR
# =============================================================================

# Habilitar Tor (default: false, activar explícitamente para usar proxy Tor)
TOR_ENABLED=false

# Host de Tor (default: 127.0.0.1)
TOR_HOST=127.0.0.1

# Puerto de Tor (default: 9050)
TOR_PORT=9050

# =============================================================================
# CONFIGURACIÓN DE SELECCIÓN DE MAGNETS
# =============================================================================

# Estrategia de selección de magnets:
# - 'seeders': Prioriza únicamente el número de seeders (default)
# - 'quality': Prioriza únicamente la calidad del video
# - 'balanced': Combina calidad y seeders según pesos configurados
MAGNET_SELECTION_STRATEGY=seeders

# Pesos para estrategia 'balanced' (0-100, deben sumar 100 idealmente)
# Peso de seeders en la puntuación final (default: 70)
MAGNET_SEEDERS_WEIGHT=70

# Peso de calidad en la puntuación final (default: 30)
MAGNET_QUALITY_WEIGHT=30

# Mínimo de seeders requerido para considerar un magnet (default: 0)
MAGNET_MIN_SEEDERS=0

# Calidades preferidas en orden de prioridad (separadas por comas)
# Las calidades se evalúan en el orden especificado (primera = mayor prioridad)
MAGNET_QUALITY_PRIORITY=4K,2160p,1080p,720p,480p

# Habilitar logging detallado de selección de magnets (default: false)
# Útil para debugging y análisis de rendimiento
MAGNET_SELECTION_LOGGING=false
