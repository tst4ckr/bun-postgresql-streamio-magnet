{
  "name": "stremio-magnet-search-addon",
  "version": "1.0.0",
  "description": "Addon profesional de Stremio para búsqueda de enlaces magnéticos con arquitectura Clean y DDD",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot index.js",
    "start": "bun run index.js",
    "start:prod": "NODE_ENV=production bun run index.js",
    "node:start": "node index.js",
    "node:dev": "node --watch index.js",
    "validate-channels": "bun run scripts/validate-channels.js",
    "update-logos": "bun run scripts/update-logos.js",
    "deploy": "./scripts/deploy.sh",
    "test": "bun test",
    "lint": "eslint src/ --ext .js",
    "publish-addon": "bun run scripts/publish-addon.js",
    "build": "bun install --frozen-lockfile",
    "preview": "bun run start:prod",
    "beamup-deploy": "bunx beamup-cli deploy"
  },
  "keywords": [
    "stremio",
    "addon",
    "magnet",
    "torrent",
    "clean-architecture",
    "ddd"
  ],
  "author": "Stremio Magnet Search Addon",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsdom": "^23.0.1",
    "node-cron": "^3.0.3",
    "parse-magnet-uri": "^4.0.0",
    "stremio-addon-sdk": "^1.6.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stremio/magnet-search-addon.git"
  },
  "bugs": {
    "url": "https://github.com/stremio/magnet-search-addon/issues"
  },
  "homepage": "https://github.com/stremio/magnet-search-addon#readme"
}
